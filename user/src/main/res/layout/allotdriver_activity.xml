<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <include layout="@layout/sub_item_titel"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginTop="30px"
                            android:background="#fff"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <TextView
                                    android:layout_marginTop="50px"
                                    android:layout_marginBottom="50px"
                                    android:layout_marginLeft="45px"
                                    android:id="@+id/textView3"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="日本东京三日游"
                                    android:textColor="#424242"
                                    android:textSize="48px" />
                                <ImageView
                                    android:background="@drawable/w_g_saxxhdpi"
                                    android:layout_marginRight="45px"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F4F4F4"/>
                        <com.jh.rental.user.view.widget.PassengerItemView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="30px"
                            android:background="#F4F4F4"/>
                        <com.jh.rental.user.view.widget.DriverInformationItemView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="30px"
                            android:background="#F4F4F4"/>
                        <com.jh.rental.user.view.widget.OtherInformationItemView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="30px"
                            android:background="#F4F4F4"/>
                        <com.jh.rental.user.view.widget.CostItemView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="30px"
                            android:background="#F4F4F4"/>
                        <LinearLayout
                            android:background="#fff"
                            android:layout_marginBottom="30px"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:gravity="end"
                            android:layout_height="match_parent">
                                <Button
                                    android:layout_marginTop="70px"
                                    android:layout_marginRight="27px"
                                    android:background="@drawable/w_g_txxhdpi"
                                    android:layout_width="153px"
                                    android:layout_height="66px"
                                    android:textColor="#48B2F9"
                                    android:text="@string/SingleBack" />
                                <Button
                                    android:layout_marginTop="70px"
                                    android:layout_marginRight="27px"
                                    android:background="@drawable/w_g_txxhdpi"
                                    android:layout_width="153px"
                                    android:layout_height="66px"
                                    android:textColor="#48B2F9"
                                    android:text="@string/share" />
                                <Button
                                    android:layout_marginTop="70px"
                                    android:layout_marginRight="45px"
                                    android:background="@drawable/w_g_txxhdpi"
                                    android:layout_width="153px"
                                    android:layout_height="66px"
                                    android:textColor="#48B2F9"
                                    android:text="@string/consult" />
                        </LinearLayout>
                </LinearLayout>
        </ScrollView>
</LinearLayout>