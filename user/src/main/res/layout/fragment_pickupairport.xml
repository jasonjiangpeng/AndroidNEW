<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="45px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/feijixxhdpi"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_marginLeft="30px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="42px"
                    android:id="@+id/pickup_tv1"
                    android:textColor="#DDD"
                    android:text="@string/InputFlightno"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="45px"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"/>
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="45px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dingweiicon"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_marginLeft="48px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="42px"
                    android:id="@+id/pickup_tv2"
                    android:textColor="#DDD"
                    android:text="@string/GoTo"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/jinggaoicon"
            android:drawablePadding="21px"
            android:layout_marginTop="48px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36px"
            android:textColor="#9a9a9a"
            android:text="@string/TripDelayCost"/>

</LinearLayout>