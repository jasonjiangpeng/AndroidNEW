<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/dividerline"
    android:showDividers="beginning|end|middle|none">
   <include layout="@layout/sub_item_titel"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/customtabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/blue1"
        app:tabSelectedTextColor="@color/blue1"
        app:tabTextColor="@color/black1"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customviewpager">
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/customfragment"></FrameLayout>
    </android.support.v4.view.ViewPager>
</LinearLayout>