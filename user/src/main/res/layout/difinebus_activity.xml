<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <include layout="@layout/sub_item_titel"/>

        <LinearLayout
            android:id="@+id/difne_usecar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:background="#fff"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="177px"
                    android:id="@+id/dftv1"
                    android:layout_marginLeft="45px"
                    android:drawableLeft="@drawable/dizhixxhdpi"
                    android:drawablePadding="30px"
                    android:gravity="center_vertical"
                    android:hint="@string/ChooseCarCity"
                    android:textColor="#424242"
                    android:textSize="42px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_InputViaPoint"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/qiicon"
                    android:drawablePadding="30px"
                    android:layout_marginLeft="45px"
                    android:layout_width="match_parent"
                    android:layout_height="177px"
                    android:textSize="42px"
                    android:id="@+id/citysub"
                    android:textColor="#424242"
                    android:hint="@string/StartGoTO"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/ll_viapoint1"
            android:visibility="gone"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/jingicon"
                    android:drawablePadding="30px"
                    android:layout_marginLeft="45px"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="177px"
                    android:textSize="42px"
                    android:textColor="#424242"
                    android:hint="@string/InputViaPoint"/>

                <TextView
                    android:id="@+id/tv_delete1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="45px"
                    android:drawableLeft="@drawable/deleteicon"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/ll_viapoint2"
            android:visibility="gone"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/jingicon"
                    android:drawablePadding="30px"
                    android:layout_marginLeft="45px"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="177px"
                    android:textSize="42px"
                    android:textColor="#424242"
                    android:hint="@string/InputViaPoint"/>
                <TextView
                    android:id="@+id/tv_delete2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="45px"
                    android:drawableLeft="@drawable/deleteicon"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_end"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/zhongicon"
                    android:drawablePadding="30px"
                    android:layout_marginLeft="45px"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/descity"
                    android:layout_height="177px"
                    android:textSize="42px"
                    android:textColor="#424242"
                    android:hint="@string/InputTerminal"/>
                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="45px"
                    android:drawableLeft="@drawable/jingdianaddicon"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
</LinearLayout>