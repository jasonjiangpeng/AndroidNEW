<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.jh.rental.user.view.widget.SearchView
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="30px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="30px"
            android:layout_marginRight="45px"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_cancel"

            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textSize="40px"
            android:textColor="@color/mudiwhite1"
            android:text="@string/cancel"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="276px"
        android:background="@color/white3"
        android:id="@+id/searchdes_layout"
        android:orientation="vertical" >
            <TextView
                android:layout_marginTop="30px"
                android:layout_marginBottom="20px"
                android:drawablePadding="30px"
                android:layout_marginLeft="45px"
                android:background="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/sousuojiluxxhdpi"
                android:text="@string/seachhistory"/>
            <GridView
                android:layout_marginTop="30px"
                android:layout_marginLeft="45px"
                android:layout_marginBottom="30px"
                android:id="@+id/destination_gridview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="10px"
                android:numColumns="4"
                android:verticalSpacing="10px">
            </GridView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white3"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/sd_left_area"
            android:layout_width="219px"
            android:background="@color/mudiwhite3"
            android:scrollbars="none"
            android:layout_height="wrap_content">
        </ListView>
        <GridView
            android:layout_marginLeft="60px"
            android:layout_marginRight="45px"
            android:id="@+id/sd_destination_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="40px"
            android:verticalSpacing="40px"
            android:numColumns="2"
            android:scrollbars="none"
            android:gravity="center"
            android:padding="15px">
        </GridView>
    </LinearLayout>

</LinearLayout>