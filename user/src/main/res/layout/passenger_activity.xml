<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <include layout="@layout/sub_item_titel" />

        <LinearLayout
            android:layout_marginTop="30px"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:background="#FFF">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="177px"
                    android:layout_marginLeft="45px"
                    android:drawablePadding="30px"
                    android:id="@+id/et_contact"
                    android:textSize="42px"
                    android:hint="@string/EnterContact"
                    android:background="@null"
                    android:textColorHint="@color/mudiwhite4"
                    android:drawableLeft="@drawable/m_d_fxxhdpi"/>
                <TextView
                    android:drawableRight="@drawable/diquicon"
                    android:layout_marginRight="45px"
                    android:drawablePadding="16px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="42px"
                    android:textColor="@color/mudiwhite2"
                    android:text="@string/AddressBook"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="112px"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#F4F4F4" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:background="#FFF">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="177px"
                    android:layout_marginLeft="45px"
                    android:drawablePadding="30px"
                    android:id="@+id/et_phone"
                    android:textSize="42px"
                    android:hint="@string/EnterPassengersPhone"
                    android:background="@null"
                    android:textColorHint="@color/mudiwhite4"
                    android:drawableLeft="@drawable/m_d_f_1xxhdpi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108px"
            android:gravity="center_horizontal|bottom">
                <TextView
                    android:layout_marginBottom="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DriverContactPassengers"
                    android:textColor="#9a9a9a"
                    android:textSize="32px" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:orientation="horizontal"
            android:background="#FFF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45px"
                    android:textSize="46px"
                    android:hint="@string/HistoricalRecord"
                    android:textColorHint="@color/mudiwhite2"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>