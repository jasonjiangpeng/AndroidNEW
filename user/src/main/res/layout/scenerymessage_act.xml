<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="30dp"
                    android:background="@drawable/zengjiaxxhdpi"/>
            </FrameLayout>
            <include layout="@layout/scenerymessage_sub_act"/>
            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scenery_layout"
                app:tabIndicatorColor="#4CB2FF"
                app:tabSelectedTextColor="#4CB2FF"
                >
            </android.support.design.widget.TabLayout>


        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="vertical"

            android:id="@+id/scenery_viewpager">
        </android.support.v4.view.ViewPager>
    <include layout="@layout/scenerymessage_sub2_act"/>
</LinearLayout>