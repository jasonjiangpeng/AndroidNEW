<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="138px"
    android:background="#fff">
        <ImageView
            android:layout_marginLeft="45px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fanhuixxhdpi"
            android:id="@+id/sub_goback"
            android:onClick="ImgBack_M"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="48px"
            android:textColor="#424242"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/sub_title"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_marginRight="45px"
            android:textColor="#48B2f9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:id="@+id/sub_title2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/linecolor1"/>
</RelativeLayout>
