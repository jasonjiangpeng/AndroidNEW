<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_tiiv"
        android:layout_marginLeft="45px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="249px"
        android:gravity="center">
        <LinearLayout
            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/w_g_bxxhdpi"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/w_g_cxxhdpi"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/w_g_dxxhdpi"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:id="@+id/startingPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日本东京三日游"
                android:textColor="#424242"
                android:textSize="48px" />
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="34px"
                android:id="@+id/end"
                android:layout_below="@+id/startingPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="东京.迪士尼酒店"
                android:textColor="#424242"
                android:textSize="48px" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_tiiv"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_marginLeft="45px"
        android:layout_marginTop="51px"
        android:layout_marginBottom="75px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日本东京三日游"
        android:textColor="#424242"
        android:textSize="48px" />
</LinearLayout>