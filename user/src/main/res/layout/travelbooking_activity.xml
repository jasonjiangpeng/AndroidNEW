<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">
        <include layout="@layout/sub_item_titel"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="#F4F4F4"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="45px"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="48px"
            android:textColor="#424242"
            android:text="东京—大阪三日游"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F4F4F4"
            android:layout_marginLeft="45px"/>

        <TextView
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/dizhixxhdpi"
            android:drawablePadding="30px"
            android:layout_marginLeft="45px"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="42px"
            android:textColor="#424242"
            android:text="东京"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F4F4F4"/>
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="141px"
            android:gravity="center"
            android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:drawableLeft="@drawable/renshuxxhdpi"
                            android:drawablePadding="30px"
                            android:layout_marginLeft="45px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="42px"
                            android:textColor="#424242"
                            android:text="3人"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:drawableLeft="@drawable/childicon"
                            android:drawablePadding="30px"
                            android:layout_marginLeft="45px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="42px"
                            android:textColor="#424242"
                            android:text="1人"/>
                </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginLeft="45px"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="141px"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45px"
                            android:drawableLeft="@drawable/caricon"
                            android:drawablePadding="30px"
                            android:text="艾尔法10系（7座）"
                            android:textColor="#424242"
                            android:textSize="42px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45px"
                            android:drawableLeft="@drawable/badgeicon"
                            android:drawablePadding="30px"
                            android:text="4件"
                            android:textColor="#424242"
                            android:textSize="42px" />
                </LinearLayout>
        </LinearLayout>

        <View
            android:layout_marginLeft="45px"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="141px"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45px"
                            android:drawableLeft="@drawable/shijianicon"
                            android:drawablePadding="30px"
                            android:text="2017/5/12 9:30"
                            android:textColor="#424242"
                            android:textSize="42px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45px"
                            android:drawableLeft="@drawable/huanchengicon"
                            android:drawablePadding="30px"
                            android:text="换乘车人"
                            android:textColor="#424242"
                            android:textSize="42px" />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4F4F4">
                <Button
                    android:id="@+id/trave_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45px"
                    android:layout_marginRight="45px"
                    android:layout_marginTop="60px"
                    android:background="@drawable/rectangle_blue"
                    android:text="@string/TripReservation"
                    android:textColor="#FFF"
                    android:textSize="50px" />
        </LinearLayout>

</LinearLayout>