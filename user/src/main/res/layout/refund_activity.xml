<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
         <include layout="@layout/sub_item_titel"/>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#F4F4F4"/>
         <TextView
             android:layout_marginTop="51px"
             android:gravity="center_vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="45px"
             android:text="日本-东京-大阪-3日游"
             android:textColor="#424242"
             android:textSize="42px" />
         <LinearLayout
             android:layout_marginTop="75px"
             android:id="@+id/cost"
             android:background="#fff"
             android:layout_width="match_parent"
             android:layout_height="335px"
             android:orientation="vertical">
             <LinearLayout
                 android:layout_marginTop="39px"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:orientation="horizontal">
                 <TextView
                     android:layout_marginLeft="45px"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"
                     android:textSize="42px"
                     android:textColor="#424242"
                     android:text="@string/IndentCost"/>
                 <TextView
                     android:layout_marginRight="45px"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="42px"
                     android:textColor="@color/userOrange2"
                     android:text="￥900"/>
             </LinearLayout>
             <LinearLayout
                 android:layout_marginTop="39px"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:orientation="horizontal">
                 <TextView
                     android:layout_marginLeft="45px"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"
                     android:textSize="42px"
                     android:textColor="#424242"
                     android:text="@string/Poundage"/>
                 <TextView
                     android:layout_marginRight="45px"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="42px"
                     android:textColor="@color/userOrange2"
                     android:text="￥870"/>

             </LinearLayout>

             <LinearLayout
                 android:layout_marginTop="39px"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:orientation="horizontal">
                 <TextView
                     android:layout_marginLeft="45px"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"
                     android:textSize="42px"
                     android:textColor="#424242"
                     android:text="@string/RefundAmount"/>
                 <TextView
                     android:layout_marginRight="45px"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="42px"
                     android:textColor="@color/userOrange2"
                     android:text="￥870"/>
             </LinearLayout>
         </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#F4F4F4"/>
         <LinearLayout
             android:layout_marginLeft="45px"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="249px"
             android:gravity="center">
             <LinearLayout
                 android:layout_marginRight="30px"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical">
                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/w_g_bxxhdpi"/>
                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/w_g_cxxhdpi"/>
                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/w_g_dxxhdpi"/>
             </LinearLayout>
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:id="@+id/startingPoint"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="日本东京三日游"
                     android:textColor="#424242"
                     android:textSize="48px" />
                 <TextView
                     android:layout_marginTop="34px"
                     android:id="@+id/end"
                     android:layout_below="@+id/startingPoint"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="东京.迪士尼酒店"
                     android:textColor="#424242"
                     android:textSize="48px" />
             </RelativeLayout>
         </LinearLayout>

</LinearLayout>