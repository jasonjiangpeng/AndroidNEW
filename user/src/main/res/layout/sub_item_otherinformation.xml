<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:userAPP="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_click1"
        android:layout_width="match_parent"
        android:layout_height="141px"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_weight="1"
                android:text="其他信息"
                android:textColor="#424242"
                android:textSize="42px" />
            <ImageView
                android:id="@+id/iv_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="45px"
                android:background="@drawable/w_g_pxxhdpi" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/information"
        android:visibility="gone"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"/>
        <com.jh.rental.user.view.widget.InputBoxItemView
            android:layout_marginLeft="45px"
            android:layout_width="match_parent"
            android:layout_height="141px"
            userAPP:tvTex="@string/PersonName"/>
        <com.jh.rental.user.view.widget.InputBoxItemView
            android:layout_marginLeft="45px"
            android:layout_width="match_parent"
            android:layout_height="141px"
            userAPP:tvTex="@string/Phone"/>
        <com.jh.rental.user.view.widget.InputBoxItemView
            android:layout_marginLeft="45px"
            android:layout_width="match_parent"
            android:layout_height="141px"
            userAPP:tvTex="@string/IndentTime"/>
        <com.jh.rental.user.view.widget.InputBoxItemView
            android:layout_marginLeft="45px"
            android:layout_width="match_parent"
            android:layout_height="141px"
            userAPP:tvTex="@string/IndentNum"/>
    </LinearLayout>
</LinearLayout>