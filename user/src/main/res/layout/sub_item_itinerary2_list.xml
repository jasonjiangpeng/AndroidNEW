<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#F4F4F4" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="141px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/et_contact"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:textSize="48px"
            android:text="第一天"
            android:textStyle="bold"
            android:textColor="@color/mudiwhite2"/>
        <TextView
            android:gravity="center_vertical"
            android:drawableRight="@drawable/jingdianaddicon"
            android:drawablePadding="30px"
            android:textSize="34px"
            android:layout_marginRight="45px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/userGray"
            android:text="@string/addItinerary"/>
    </LinearLayout>
    <View
        android:layout_marginBottom="42px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#F4F4F4" />

</LinearLayout>