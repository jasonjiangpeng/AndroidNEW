<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <include layout="@layout/sub_item_titel"/>

        <LinearLayout
            android:layout_marginTop="24px"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="45px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dingweixxhdpi"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_marginLeft="30px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="42px"
                    android:textColor="#424242"
                    android:text="@string/city"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"/>
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="45px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dingweixxhdpi"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_marginLeft="30px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="42px"
                    android:textColor="#9a9a9a"
                    android:text="@string/StartingPlace"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="45px"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"/>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="45px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dingweixxhdpi"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_marginLeft="30px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="42px"
                    android:textColor="#9a9a9a"
                    android:text="@string/after"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="45px"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"/>
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="45px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dingweixxhdpi"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_marginLeft="30px"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="42px"
                    android:textColorHighlight="#DDD"
                    android:background="@null"
                    android:hint="@string/InputViaPoint"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_marginRight="45px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dingweixxhdpi"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="45px"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"/>
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="45px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dingweixxhdpi"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_marginLeft="30px"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="42px"
                    android:textColorHighlight="#DDD"
                    android:hint="@string/InputTerminal"
                    android:background="@null"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_marginRight="45px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dingweixxhdpi"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
</LinearLayout>