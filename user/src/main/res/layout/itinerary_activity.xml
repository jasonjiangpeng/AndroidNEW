<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <include layout="@layout/sub_item_titel" />
        <RelativeLayout
            android:id="@+id/rl_ShutDown"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="#A7D9FE">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ClickGoToDestination"
                    android:textColor="#fff"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
                <ImageView
                    android:id="@+id/iv_ShutDown"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_marginRight="45px"
                    android:background="@drawable/deleteicon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>