<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <include layout="@layout/sub_item_titel" />
        <TextView
            android:layout_marginTop="50px"
            android:layout_marginBottom="18px"
            android:layout_marginLeft="45px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visa"
            android:textColor="@color/mudiwhite2"
            android:textSize="42px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">
                <RelativeLayout
                    android:layout_marginLeft="92px"
                    android:layout_marginRight="92px"
                    android:layout_marginTop="54px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="402px"
                            android:layout_height="237px"
                            android:background="@drawable/fronthdpiicon"/>
                        <View
                            android:layout_marginLeft="45px"
                            android:layout_width="2px"
                            android:layout_height="200px"
                            android:background="#F4F4F4"
                            android:layout_centerInParent="true"/>
                        <ImageView
                            android:layout_gravity=""
                            android:layout_width="402px"
                            android:layout_height="237px"
                            android:background="@drawable/backhdpiicon"
                            android:layout_alignParentEnd="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="92px"
                    android:layout_marginRight="92px"
                    android:layout_marginTop="36px"
                    android:layout_marginBottom="51px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/bt_upload"
                            android:layout_width="402px"
                            android:layout_height="81px"
                            android:textSize="36px"
                            android:textColor="@color/mudiwhite1"
                            android:text="上传正面"
                            android:background="@drawable/g_b_cxxhdpi"/>
                        <Button
                            android:layout_gravity=""
                            android:layout_width="402px"
                            android:layout_height="81px"
                            android:textSize="36px"
                            android:textColor="@color/mudiwhite1"
                            android:text="上传反面"
                            android:background="@drawable/g_b_cxxhdpi"
                            android:layout_alignParentEnd="true" />
                </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="51px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="26px"
                    android:layout_marginRight="26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:background="@drawable/jinggaoicon"/>
                <TextView
                    android:layout_marginRight="92px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/userGray"
                    android:textSize="36px"
                    android:text="@string/HongKongNote2" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="6px"
            android:layout_marginLeft="92px"
            android:layout_marginRight="92px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/userGray"
            android:textSize="36px"
            android:text="@string/HongKongNote3" />

</LinearLayout>