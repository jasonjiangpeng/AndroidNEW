<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33px"
            android:background="@drawable/dingzhixxhdpi"
            android:layout_gravity="center_vertical|center_horizontal" />
        <TextView
            android:layout_marginTop="36px"
            android:id="@+id/tv_trip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36px"
            android:text="@string/charteredBus"
            android:textColor="#424242"
            android:layout_gravity="center_vertical|center_horizontal"/>
        <TextView
            android:layout_marginTop="21px"
            android:id="@+id/tv_trip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="#9a9a9a"
            android:text="@string/ExclusiveDriver"
            android:layout_gravity="center_vertical|center_horizontal"/>
</LinearLayout>