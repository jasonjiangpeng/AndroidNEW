<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:showDividers="beginning|end|middle|none"
    android:divider="@drawable/dividerline"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:id="@+id/a_text1"
            android:drawableRight="@drawable/drawable_list_a"
            android:textColor="@color/list_text_color"
            android:text="@string/AboutUs"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:id="@+id/a_text2"
            android:drawableRight="@drawable/drawable_list_a"
            android:textColor="@color/list_text_color"
            android:text="@string/AboutUs"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_text_color"
            android:drawablePadding="2dp"
            android:id="@+id/a_text3"
            android:drawableRight="@drawable/drawable_list_a"
            android:text="@string/AboutUs"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_list_view"
        android:visibility="gone"
        >

    </ListView>
</LinearLayout>



